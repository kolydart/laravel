{
    "name": "kolydart/laravel",
    "description": "A collection of laravel helper classes",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "autoload": {
        "psr-4": {
            "Kolydart\\Laravel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kolydart\\Laravel\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Tassos Kolydas" 
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "illuminate/support": "^8.0|^9.0|^10.0",
        "illuminate/database": "^8.0|^9.0|^10.0",
        "illuminate/translation": "^8.0|^9.0|^10.0",
        "mockery/mockery": "^1.6",
        "illuminate/console": "^8.83",
        "illuminate/events": "^8.83"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Kolydart\\Laravel\\App\\Providers\\DbSeedProtectionServiceProvider",
                "Kolydart\\Laravel\\Providers\\ComponentsServiceProvider"
            ]
        }
    }
}
